@using BackOffice.Client.Pages.Retail.Receipts.TabularParts
@inherits DetailsFormBase<Receipt>

<Form Commands="@ToolbarCommands">
    <FormContent>

        <EditForm EditContext="@EditContext" OnValidSubmit="@CloseClick">

            <DataAnnotationsValidator />

            <MudGrid>
                <MudItem Style="min-width:50%">
                    <MudCard>

                        <MudCardContent>

                            <MudTextField Label="Id" Class="mt-3" @bind-Value="Model.Id" For="@(() => Model.Id)" Variant="@MudBlazor.Variant.Filled" Disabled />
                            <MudTextField Label="Number" Class="mt-3" @bind-Value="Model.CodeNumber" For="@(() => Model.CodeNumber)" Variant="@MudBlazor.Variant.Filled" />
                            <MudTextField Label="Date" Class="mt-3" @bind-Value="Model.Date" For="@(() => Model.Date)" Variant="@MudBlazor.Variant.Filled" />
                            <MudTextField Label="Store" Class="mt-3" @bind-Value="Model.Store" For="@(() => Model.Store)" Variant="@MudBlazor.Variant.Filled" />
                            <MudTextField Label="Cashier" Class="mt-3" @bind-Value="Model.Cashier" For="@(() => Model.Cashier)" Variant="@MudBlazor.Variant.Filled" />

                        </MudCardContent>

                    </MudCard>
                </MudItem>
            </MudGrid>

            <ReceiptItems Items="@Model.ReceiptItems" Commands="_itemsTabToolbarCommands" />

        </EditForm>

    </FormContent>
</Form>
