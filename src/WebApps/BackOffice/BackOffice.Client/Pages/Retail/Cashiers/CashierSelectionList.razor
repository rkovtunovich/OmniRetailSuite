@namespace BackOffice.Client.Pages.Retail.Cashiers
@inherits SelectionListBase<Cashier>

<MudDataGrid T="Cashier" Items="@Items" Filterable="true" QuickFilter="@QuickFilter"
             ReadOnly="true"
             SelectedItems="SelectedItems"
             MultiSelection="true"
             FixedHeader="true" HeaderClass="data-grid-header"
             FooterClass="ors-selection-list-footer"
             Style="height:100%; display:flex; flex-direction:column">

    <ToolBarContent>

        <MudSpacer />
        <MudTextField @bind-Value="@QuickFilterSearchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>

    <Columns>

        <SelectColumn T="Cashier" />
        <PropertyColumn Property="x => x.GetCode()" Title="Code" IsEditable="false" />
        <PropertyColumn Property="x => x.Name" />

    </Columns>

</MudDataGrid>

<MudButton Color="Color.Primary" OnClick="@(() => OnOkButtonClick())">OK</MudButton>
<MudButton Color="Color.Secondary" OnClick="@(() => OnCancelButtonClick())">CANCEL</MudButton>

