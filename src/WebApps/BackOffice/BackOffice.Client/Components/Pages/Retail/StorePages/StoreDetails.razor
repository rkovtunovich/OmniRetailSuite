@using BackOffice.Client.Components.Pages.Retail.StorePages.TabularParts
@inherits DetailsFormBase<Store>

@namespace BackOffice.Client.Components.Pages.Retail.StorePages

<Form Commands="@ToolbarCommands">
    <FormContent>

        <EditForm EditContext="@EditContext" OnValidSubmit="@SaveClick">

            <DataAnnotationsValidator />

            <MudGrid>
                <MudItem Style="min-width:50%">
                    <MudCard>

                        <MudCardContent>

                            <MudTextField Label="@_localizer["Id"]"
                                          Class="mt-3"
                                          @bind-Value="Model.Id"
                                          For="@(() => Model.Id)"
                                          Variant="@MudBlazor.Variant.Filled"
                                          Disabled />

                            <MudTextField Label="@_localizer["Name"]"
                                          Class="mt-3"
                                          @bind-Value="Model.Name"
                                          For="@(() => Model.Name)"
                                          Variant="@MudBlazor.Variant.Filled" />

                            <MudTextField Label="@_localizer["Address"]"
                                          Class="mt-3" 
                                          @bind-Value="Model.Address" 
                                          For="@(() => Model.Address)" 
                                          Variant="@MudBlazor.Variant.Filled" />

                        </MudCardContent>

                    </MudCard>
                </MudItem>
            </MudGrid>

            <StoreCashiers Items="@Model.Cashiers" Commands="_cashierTabToolbarCommands" />

        </EditForm>

    </FormContent>
</Form>

