@using RetailAssistant.Client.Helpers;
@inherits OrsLayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height:100%">

    <MudAppBar Elevation="1" Dense=true>

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudSwitch Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark Theme" ValueChanged="@(async(_isDarkMode) => await ChangeTheme())" />
        <LoginDisplay />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />

    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Retail</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Style="max-width:100% - var(--mud-drawer-width-left); height:100%; padding-top:48px">

        @Body

    </MudMainContent>

</MudLayout>



