@page "/app-settings"
@inherits OrsComponentBase

<MudPaper Height="100%" Class="d-flex">

    <EditForm Model="@_appConfig" OnValidSubmit="@Save">

        <DataAnnotationsValidator />

        <MudGrid>
            <MudItem Style="min-width:50%">
                <MudCard>

                    <MudCardContent>

                        <MudSelect T="Store" 
                                   @bind-Value=_appConfig.Store 
                                   ToStringFunc="@( x => x.ToString())" 
                                   Label="Store" 
                                   Clearable 
                                   Variant="@MudBlazor.Variant.Filled">
                           
                            @foreach (var item in _stores)
                            {
                                <MudSelectItem Value="@item"></MudSelectItem>
                            }
                        </MudSelect>

                    </MudCardContent>

                </MudCard>
            </MudItem>
        </MudGrid>

        <MudButton Variant="Variant.Outlined" Color="Color.Primary" ButtonType="ButtonType.Submit">Save</MudButton>

    </EditForm>

</MudPaper>
