@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@inherits OrsLayoutComponentBase

@inject IWebAssemblyHostEnvironment Env

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height:100%">

    <MudAppBar Elevation="1" Dense=true>

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <LoginDisplay />

        <AuthorizeView>
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" OnClick="OpenAppSettings" />
        </AuthorizeView>

    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Retail Assistant</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Style="max-width:100% - var(--mud-drawer-width-left); height:100%; padding-top:48px">

        @Body

    </MudMainContent>

</MudLayout>

@if (Env.IsDevelopment())
{
    <HeadContent>
        <meta http-equiv="Content-Security-Policy"
              content="default-src
                            'self'
                            https://*.omni-rs.com
                            http://localhost:*
                            'unsafe-inline';
                       script-src
                            'self'
                            'wasm-unsafe-eval'
                            'unsafe-inline'
                            https://*.omni-rs.com
                            https://code.iconify.design;
                       connect-src
                            'self'
                            https://*.omni-rs.com
                            https://api.iconify.design
                            http://localhost:*
                            wss://localhost:*
                            ws://localhost:*;">
    </HeadContent>
}
else
{
    <HeadContent>
        <meta http-equiv="Content-Security-Policy"
              content="default-src 
                            'self'
                            'wasm-unsafe-eval'
                            https://*.omni-rs.com
                            https://code.iconify.design
                            'unsafe-inline';
                       script-src 
                            'self' 
                            'wasm-unsafe-eval' 
                            'sha256-9mThMC8NT3dPbcxJOtXiiwevtWTAPorqkXGKqI388cI=' 
                            https://*.omni-rs.com 
                            https://*.iconify.design
                            'unsafe-inline';
                       connect-src
                            'self'
                            https://*.omni-rs.com
                            https://*.unisvg.com
                            https://*.iconify.design;">
    </HeadContent>
}

