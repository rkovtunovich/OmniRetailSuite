{
  "Routes": [
    {
      "ServiceName": "identityapi",
      "DownstreamPathTemplate": "/api/v1/{everything}",
      "UpstreamPathTemplate": "/api/v1/identity/{everything}"
    },
    {
      "ServiceName": "identityapi",
      "DownstreamPathTemplate": "/.well-known/openid-configuration",
      "UpstreamPathTemplate": "/.well-known/openid-configuration"
    },
    {
      "ServiceName": "catalogapi",
      "DownstreamPathTemplate": "/api/v1/catalog/{everything}",
      "UpstreamPathTemplate": "/api/v1/catalog/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityServer",
        "AllowedScopes": [ "webappsgateway" ]
      }
    },
    {
      "ServiceName": "retailapi",
      "DownstreamPathTemplate": "/api/v1/retail/{everything}",
      "UpstreamPathTemplate": "/api/v1/retail/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "IdentityServer",
        "AllowedScopes": [ "webappsgateway" ]
      }
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}