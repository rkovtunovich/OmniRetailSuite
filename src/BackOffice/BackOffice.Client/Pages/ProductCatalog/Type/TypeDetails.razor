@inherits FormBase<ProductType>

@namespace BackOffice.Client.Pages.ProductCatalog.Type

<Form Commands="@ToolbarCommands">
    <FormContent>

        <EditForm EditContext="@EditContext" OnValidSubmit="@SaveClick">

            <DataAnnotationsValidator />

            <MudGrid>
                <MudItem Style="min-width:50%">
                    <MudCard>

                        <MudCardContent>

                            <MudTextField Label="Id" Class="mt-3" @bind-Value="Type.Id" For="@(() => Type.Id)" Variant="@MudBlazor.Variant.Filled" Disabled />
                             <MudTextField Label="Name" Class="mt-3" @bind-Value="Type.Name" For="@(() => Type.Name)" Variant="@MudBlazor.Variant.Filled" />

                         </MudCardContent>

                     </MudCard>
                 </MudItem>
             </MudGrid>

         </EditForm>

     </FormContent>
 </Form>